{
  "manifest_version": 3,
  "name": "WhatsApp Text Translator",
  "version": "1.0",
  "description": "Translate and correct WhatsApp messages with GPT",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "WhatsApp Translator"
  }
}
